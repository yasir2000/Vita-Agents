# Vita Agents - Healthcare AI Platform Environment Configuration
# Version 3.0.0 - Multi-Agent Healthcare Framework
# Copy this file to .env and update with your actual values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Ollama Local LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:13b-chat
OLLAMA_TIMEOUT=120

# HuggingFace Configuration (Optional)
HUGGINGFACE_API_KEY=your_huggingface_token_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# =============================================================================
# Database Configuration
# =============================================================================

# Primary Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://vita_user:vita_secure_pass_2024@localhost:5432/vita_agents

# Alternative SQLite for development
# DATABASE_URL=sqlite:///./vita_agents.db

# Redis Cache and Session Store
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=vita_redis_pass_2024
REDIS_DB=0

# Elasticsearch for Analytics and Search
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=vita_elastic_pass

# =============================================================================
# Healthcare API Configuration
# =============================================================================

# FHIR Server Configuration
FHIR_SERVER_URL=http://localhost:8080/fhir
FHIR_SERVER_AUTH_TYPE=none
FHIR_SERVER_USERNAME=
FHIR_SERVER_PASSWORD=
FHIR_SERVER_TOKEN=

# HL7 MLLP Configuration
HL7_MLLP_HOST=localhost
HL7_MLLP_PORT=2575
HL7_MLLP_TIMEOUT=30

# Epic FHIR (Example)
# EPIC_FHIR_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
# EPIC_CLIENT_ID=your_epic_client_id
# EPIC_CLIENT_SECRET=your_epic_client_secret

# Cerner FHIR (Example)
# CERNER_FHIR_URL=https://fhir-ehr-code.cerner.com/r4/ec2458f2-1e24-41c8-b71b-0e701af7583d
# CERNER_CLIENT_ID=your_cerner_client_id
# CERNER_CLIENT_SECRET=your_cerner_client_secret

# =============================================================================
# Security and Compliance Configuration
# =============================================================================

# Application Security
SECRET_KEY=your_super_secure_secret_key_change_this_in_production
ENCRYPTION_KEY=your_32_char_encryption_key_here_!!
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# HIPAA Compliance
HIPAA_LOGGING_ENABLED=true
AUDIT_TRAIL_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
MINIMUM_NECESSARY_ENFORCEMENT=true
DATA_RETENTION_DAYS=2555  # 7 years as per HIPAA

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Application Configuration
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4
RELOAD=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=100

# =============================================================================
# Healthcare Agent Configuration
# =============================================================================

# Agent Framework
AGENT_MAX_CONCURRENT_TASKS=10
AGENT_TASK_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3
AGENT_MEMORY_LIMIT_MB=1024

# Team Management
TEAM_MAX_SIZE=20
TEAM_COORDINATION_TIMEOUT=60
EMERGENCY_RESPONSE_TIMEOUT=120

# Clinical Decision Support
CDS_RULES_ENABLED=true
CDS_ALERT_THRESHOLD=0.8
CDS_MAX_RECOMMENDATIONS=10

# =============================================================================
# External Services Configuration
# =============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# Monitoring and Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true

# File Storage
STORAGE_TYPE=local  # local, s3, azure, gcp
STORAGE_PATH=./data/uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=vita-agents-storage

# =============================================================================
# Healthcare Standards Configuration
# =============================================================================

# FHIR Configuration
FHIR_VERSION=R4
FHIR_VALIDATION_STRICT=true
FHIR_BUNDLE_SIZE_LIMIT=1000

# HL7 Configuration
HL7_VERSION=2.5
HL7_ENCODING=UTF-8
HL7_VALIDATION_ENABLED=true

# Terminology Services
SNOMED_CT_EDITION=US
ICD_VERSION=10
LOINC_VERSION=latest
RXNORM_ENABLED=true

# =============================================================================
# Performance and Scaling Configuration
# =============================================================================

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000
CACHE_CLEANUP_INTERVAL=300

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=50

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# Development and Testing Configuration
# =============================================================================

# Testing
TEST_DATABASE_URL=sqlite:///./test_vita_agents.db
TEST_FHIR_SERVER_URL=http://localhost:8081/fhir
PYTEST_WORKERS=4

# Development Tools
HOT_RELOAD=true
API_DOCS_ENABLED=true
PROFILING_ENABLED=false

# Mock Services
MOCK_LLM_RESPONSES=false
MOCK_FHIR_SERVER=false
MOCK_HL7_MESSAGES=false