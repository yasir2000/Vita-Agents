# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://vita_user:vita_password@localhost:5432/vita_agents
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=vita_agents

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_RETRY_ATTEMPTS=3

# Healthcare Standards Configuration
FHIR_SERVER_URL=http://hapi.fhir.org/baseR4
FHIR_VERSION=R4
HL7_VERSION=2.8

# EHR Integration
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret
CERNER_CLIENT_ID=your-cerner-client-id
CERNER_CLIENT_SECRET=your-cerner-client-secret

# Compliance and Audit
HIPAA_COMPLIANCE=true
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
DATA_ENCRYPTION_AT_REST=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# AI/ML Configuration - Multiple LLM Providers

# OpenAI Configuration
VITA_AI_OPENAI_API_KEY=your-openai-api-key
VITA_AI_OPENAI_API_BASE=https://api.openai.com/v1
VITA_AI_OPENAI_ORGANIZATION=your-org-id

# Anthropic Configuration
VITA_AI_ANTHROPIC_API_KEY=your-anthropic-api-key
VITA_AI_ANTHROPIC_API_BASE=https://api.anthropic.com

# Azure OpenAI Configuration
VITA_AI_AZURE_OPENAI_API_KEY=your-azure-openai-key
VITA_AI_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
VITA_AI_AZURE_OPENAI_API_VERSION=2024-02-15-preview
VITA_AI_AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Google AI Configuration
VITA_AI_GOOGLE_API_KEY=your-google-ai-key
VITA_AI_GOOGLE_PROJECT_ID=your-project-id

# Ollama Configuration (Local Models)
VITA_AI_OLLAMA_API_BASE=http://localhost:11434
VITA_AI_OLLAMA_TIMEOUT=120.0

# Hugging Face Configuration
VITA_AI_HUGGINGFACE_API_KEY=your-huggingface-token
VITA_AI_HUGGINGFACE_API_BASE=https://api-inference.huggingface.co
VITA_AI_HUGGINGFACE_USE_LOCAL=false
VITA_AI_HUGGINGFACE_DEVICE=auto

# General LLM Settings
VITA_AI_MODEL_PROVIDER=openai
VITA_AI_DEFAULT_MODEL=gpt-4-turbo-preview
VITA_AI_FALLBACK_PROVIDERS=["openai","anthropic"]
VITA_AI_MAX_TOKENS=4000
VITA_AI_TEMPERATURE=0.1
VITA_AI_TOP_P=0.9
VITA_AI_FREQUENCY_PENALTY=0.0
VITA_AI_PRESENCE_PENALTY=0.0

# Provider Settings
VITA_AI_PROVIDER_TIMEOUT=60.0
VITA_AI_PROVIDER_MAX_RETRIES=3
VITA_AI_PROVIDER_RATE_LIMIT=60

# Healthcare-specific Settings
VITA_AI_ENABLE_HEALTHCARE_MODELS=true
VITA_AI_PREFER_LOCAL_MODELS=false
VITA_AI_REQUIRE_HIPAA_COMPLIANCE=true
VITA_AI_ENABLE_MODEL_ROUTING=true

# Cost Optimization
VITA_AI_MAX_COST_PER_REQUEST=1.0
VITA_AI_ENABLE_COST_TRACKING=true

# Legacy Configuration (for backward compatibility)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
MODEL_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
MAX_TOKENS=4000
TEMPERATURE=0.1

# External Services
TERMINOLOGY_SERVICE_URL=https://tx.fhir.org
SNOMED_CT_EDITION=us
ICD10_VERSION=2024

# File Storage
STORAGE_TYPE=local  # local, s3, azure
UPLOAD_MAX_SIZE=100MB
TEMP_DIR=/tmp/vita_agents

# Workflow Configuration
WORKFLOW_ENGINE=crewai  # crewai, langchain, autogen
WORKFLOW_TIMEOUT=600
MAX_WORKFLOW_STEPS=50